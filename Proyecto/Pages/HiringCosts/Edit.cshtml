            </div>
            <div class="form-group">
                <label asp-for="HiringCost.HiringCostAdditional" class="control-label"></label>
                <input asp-for="HiringCost.HiringCostAdditional" class="form-control" />
                <span asp-validation-for="HiringCost.HiringCostAdditional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HiringCost.HiringCostFull" class="control-label"></label>
                <input asp-for="HiringCost.HiringCostFull" class="form-control" />
