@page
@model Proyecto.Pages.Roles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Rol</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Role.RoleId" />
            <div class="form-group">
                <label asp-for="Role.RolDescription" class="control-label"></label>
                <input asp-for="Role.RolDescription" class="form-control" />
                <span asp-validation-for="Role.RolDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role.RolLevelID" class="control-label"></label>
                <select asp-for="Role.RolLevelID" class="form-control" asp-items="ViewBag.RolLevelID"></select>
                <span asp-validation-for="Role.RolLevelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
